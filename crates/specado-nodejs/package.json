{
  "name": "@specado/nodejs",
  "version": "0.1.0",
  "description": "Node.js bindings for Specado - Universal LLM prompt translation and execution",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "index.js",
    "index.d.ts",
    "*.node"
  ],
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "jest",
    "universal": "napi universal",
    "version": "napi version"
  },
  "keywords": [
    "llm",
    "openai",
    "anthropic", 
    "prompt",
    "translation",
    "api",
    "binding",
    "rust",
    "napi"
  ],
  "author": "Specado Team",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/specado/specado.git",
    "directory": "crates/specado-nodejs"
  },
  "homepage": "https://www.specado.com",
  "bugs": {
    "url": "https://github.com/specado/specado/issues"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "jest": "^29.7.0",
    "typescript": "^5.4.3"
  },
  "napi": {
    "name": "specado-nodejs",
    "triples": {
      "defaults": true,
      "additional": [
        "aarch64-apple-darwin",
        "aarch64-unknown-linux-gnu",
        "aarch64-pc-windows-msvc",
        "armv7-unknown-linux-gnueabihf"
      ]
    }
  },
  "engines": {
    "node": ">= 16"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}