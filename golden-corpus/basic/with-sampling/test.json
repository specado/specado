  "provider": "openai",
  "expectations": {
    "should_succeed": true,
    "error_pattern": null,
    "ignore_fields": [
      "metadata.timestamp",
      "metadata.duration_ms"
    ],
    "volatile_fields": [],
    "expected_lossiness": []
  },
  "metadata": {
    "description": "Test with sampling parameters and token limits",
    "tags": ["basic", "sampling", "limits"],
    "enabled": true,
    "priority": 2
  }
